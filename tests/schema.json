{
	"type": "object",
	"properties": {
		"contractAddress": {
            "type": "string",
            "pattern": "^0x[a-fA-F0-9]{40}$"
        },
        "chainId": {
            "type": "integer"
        },
        "platforms": {
            "type": "array",
            "minItems": 1,
            "items": [{
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "enum": ["opensea", "rarible"]
                    },
                    "status": {
                        "type": "string",
                        "enum": ["listed", "delisted"]
                    },
                    "dateAdded": {
                        "type": "string",
                        "pattern": "\\d{4}-\\d{2}-\\d{2}"
                    },
                    "dateRemoved": {
                        "type": "string",
                        "pattern": "\\d{4}-\\d{2}-\\d{2}"
                    },
                    "delistedReason": {
                        "type": "string"
                    }
                },
                "required": [
                    "name",
                    "status",
                    "dateAdded",
                    "dateRemoved",
                    "delistedReason"
                ]
            }]
        },
        "links": {
            "type": "object",
            "properties": {
                "twitter": {
                    "type": "string"
                },
                "discord": {
                    "type": "string"
                },
                "website": {
                    "type": "string"
                }
            }
        },
        "images": {
            "type": "object",
            "properties": {
                "primary": {
                    "type":"string"
                }
            }
        }
	},
	"required": [
        "contractAddress",
        "platforms",
        "chainId",
        "links"
    ],
    "additionalProperties": false
}